@model IEnumerable<Contact.Models.ContactItem>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-2xl font-bold tracking-wide my-6">Contacts</h1>

@foreach (var i in Model)
{
    <a asp-action="Details" asp-route-id="@i.Id" class="block border-2 border-white px-4 hover:text-current py-2 w-1/4 rounded-xl flex items-center justify-start space-x-8 my-2 text-xl">
        <img src="@Url.Content(i.ImagePath)" alt="Profile picture" class="w-12 h-12 rounded-full object-cover object-center">
        <h1 class="hover:text-yellow-400">@i.FirstName @i.LastName</h1>
    </a>

}



<h1>Total Contacts: @ViewBag.ContactCount</h1>


<a asp-controller="ContactItems" asp-action="Create">
    <img src="~/images/icons8-add-50.png" class="fixed bottom-10 right-10 cursor-pointer">
</a>
